{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": false, // Removed if not needed
    "strictPropertyInitialization": false,
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*"
  ],
  "lib": [
    "es2015"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}