{
  "name": "connectverse-be",
  "version": "1.0.0",
  "main": "dist/index",
  "types": "dist/index",
  "scripts": {
    "start:prod": "set NODE_ENV=production && node dist/index.js",
    "dev": "NODE_ENV=development nodemon src/index.ts ",
    "build": "npm run build:clean && tsc",
    "build:clean": "rm -f -R dist",
    "build:logs-create": "mkdir dist/src/logs",
    "lint": "tsc --noEmit && eslint 'src/*/**/*.{js,ts}' --quiet --cache --fix",
    "db:migrate": "ts-node src/db/migrations",
    "db:migrate:prod": "node dist/src/db/migrations",
    "db:seed": "ts-node src/databases/seeders",
    "db:seed:prod": "node dist/src/databases/seeders",
    "test": "jest --collect-coverage"
  },
  "repository": {
    "type": "git",
    "url": "connect-verse"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "git add"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && lint-staged"
    }
  },
  "keywords": [
    "cv"
  ],
  "author": "Nkaka Manzi Fabrice",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@sentry/node": "^7.46.0",
    "bcryptjs": "^2.4.3",
    "celebrate": "^15.0.1",
    "config": "^3.3.9",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "express-session": "^1.17.3",
    "generate-password": "^1.7.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "7.18.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/bunyan": "^1.8.8",
    "@types/config": "^3.3.0",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.1.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.6",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/minio": "^7.1.0",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.19.45",
    "@types/nodemailer": "^6.4.7",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/validator": "^13.7.12",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "jest": "^29.5.0",
    "lint-staged": "^9.4.3",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1"
  }
}
